.section-{{ section.id }}-padding {
{% if section.settings.padding_top == 'no-indent' %}
	padding-top: 0;
{% elsif section.settings.padding_top == 'l' %}
	padding-top: 6.4rem;
{% elsif section.settings.padding_top == 'xs' %}
	padding-top: 1.6rem;
{% else %}
	padding-top: 3.2rem;
{% endif %}

{% if section.settings.padding_bottom == 'no-indent' %}
	padding-bottom: 0;
{% elsif section.settings.padding_bottom == 'l' %}
	padding-bottom: 6.4rem;
{% elsif section.settings.padding_bottom == 'xs' %}
	padding-bottom: 1.6rem;
{% else %}
	padding-bottom: 3.2rem;
{% endif %}
}

